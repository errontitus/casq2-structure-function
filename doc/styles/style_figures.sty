        thick,
        dash pattern=on 3pt off 2pt,
        minimum width=#1 cm,
        minimum height=#2 cm
    },
    dashedrectanglefit/.style={
        draw,
        black,
        thick,
        dash pattern=on 3pt off 2pt
    },
    rectanglefit/.style={
        draw,
        black,
        thick
    },
    dashed edge/.style={
        draw,
        thick,
        black,
        dash pattern=on 3pt off 2pt
    },
    solid edge/.style={
        draw,
        thick,
        black
    }
}

